<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal"
    android:background="@drawable/fondo">

    <Button
        android:id="@+id/btnVerContactos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:backgroundTint="#57889C"
        android:text="Ver Contactos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCambiarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#57889C"
        android:text="Cambiar Perfil"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVerContactos"/>

    <Button
        android:id="@+id/btnEntrarChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#57889C"
        android:text="Entrar al Chat"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCambiarPerfil"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/conectamovil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

